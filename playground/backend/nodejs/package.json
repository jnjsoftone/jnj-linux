{
  "name": "{{PROJECT_NAME}}-backend",
  "version": "1.0.0",
  "description": "{{PROJECT_DESCRIPTION}} backend service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --tsconfig tsconfig.json src/index.ts",
    "build": "swc src -d dist --config-file .swcrc",
    "start": "node dist/index.js",
    "graphql:dev": "tsx --tsconfig tsconfig.json src/graphql/server.ts",
    "graphql:build": "echo 'GraphQL build not needed - using tsx for runtime compilation'",
    "graphql:start": "tsx --tsconfig tsconfig.json src/graphql/server.ts",
    "metadata:init": "tsx --tsconfig tsconfig.json scripts/init-metadata.ts",
    "metadata:backup": "tsx --tsconfig tsconfig.json scripts/backup-metadata.ts",
    "metadata:restore": "tsx --tsconfig tsconfig.json scripts/restore-metadata.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/next": "^3.2.0",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "jnu-db": "latest",
    "mysql2": "^3.14.0",
    "pg": "^8.11.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.14",
    "@swc/core": "^1.5.7",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2",
    "vitest": "^1.6.0"
  }
}